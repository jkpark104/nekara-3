{
  "compilerOptions": {
    "target": "es2015",                                    
    "jsx": "preserve",                               
    "module": "ESNext",                               
    "moduleResolution": "node",                      
    "baseUrl": ".",                                 
    "allowJs": true,                                 
    "checkJs": true,                                 
    "noEmit": true,                                  
    "isolatedModules": true,                         
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": false,                           
    "strictNullChecks": true,
    "skipLibCheck": true                                
  }
}

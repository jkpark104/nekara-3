{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "commonjs", 
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}